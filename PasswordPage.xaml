<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CPMS.PasswordPage"
             Title="Password Page"
			 x:Name="PasswordPageName">


	<Grid RowDefinitions="*,Auto">
		<StackLayout Padding="10" Spacing="10">
			<Label Text="Please enter the a password" HorizontalOptions="Center"/>
			<Entry x:Name="PasswordEntry" Placeholder="Enter Password" IsPassword="True" Margin="10"/>
		</StackLayout>
		<Button Text="Confirm" Clicked="Confirm_Clicked" Margin="10,0,10,20" Grid.Row="1"/>
	</Grid>
</ContentPage>