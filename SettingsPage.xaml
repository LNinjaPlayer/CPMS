<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CPMS.SettingsPage"
             Title="Settings">

	<Grid RowDefinitions="*,Auto">
		<ScrollView>
			<VerticalStackLayout x:Name="CPStackLayout" Padding="10,0">

				<Label Text="Password prompt timer"/>
				<Entry x:Name="PwdPromptTimer" Keyboard="Numeric" Placeholder="Time in sec, leave empty for default (300sec = 5min)"/>

				<Grid ColumnDefinitions="*,Auto" Padding="0,10,0,0">
					<Label Text="Password prompt on CP enter"/>
					<Switch x:Name="PwdPromptCPPageEnter" Grid.Column="1"/>
				</Grid>

			</VerticalStackLayout>
		</ScrollView>

		<Button	x:Name="SaveBtn"
			Text="Save"
			Clicked="Save_Clicked"
			Margin="10,0,10,20"
			Grid.Row="1"/>
	</Grid>
</ContentPage>